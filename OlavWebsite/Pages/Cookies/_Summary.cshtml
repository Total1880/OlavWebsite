@using OlavWebsite.Core
@model Cookie

<div class="card card-header">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Diameter: @Model.Diameter</span>
        <span>Type: @Model.Type</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-sm"
           asp-page="./Detail"
           asp-route-cookieId="@Model.Id">
            Search
        </a>
        <a class="btn btn-sm"
           asp-page="./Edit"
           asp-route-cookieId="@Model.Id">
            Edit
        </a>
        <a class="btn btn-sm"
           asp-page="./Delete"
           asp-route-cookieId="@Model.Id">
            Delete
        </a>
    </div>
</div>