@page "{cookieId}"
@model OlavWebsite.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

    <h2>Delete!</h2>
    <div class="alert alert-danger">
        Are you sure you want to delete @Model.Cookie.Name?
    </div>
    <form method="post">
        <button type="submit" class="btn btn-danger">Yes!</button>
        <a asp-page="Cookies" class="btn btn-primary">Cancel</a>
    </form>

